# Backend Environment Variables
# ‚ö†Ô∏è SECURITY: Never commit the actual .env file to git!

# Database
# Production: Use strong password, consider encrypted connection
DATABASE_URL=postgresql://allie_user:allie_password@localhost:5432/allie_agent

# Session Security
# üîí CRITICAL: Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Must be cryptographically random, minimum 64 characters
SESSION_SECRET=your-secret-key-here-use-crypto-randomBytes-64-hex

# Hyperliquid API
# Get from: https://hyperliquid.xyz/
HYPERLIQUID_API_KEY=your-hyperliquid-api-key
HYPERLIQUID_PRIVATE_KEY=your-hyperliquid-private-key
HYPERLIQUID_TESTNET=true

# OpenRouter AI
# Get from: https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key
AI_MODEL=moonshot/kimi-k2

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL (for CORS)
# Production: Set to your actual domain (e.g., https://yourdomain.com)
FRONTEND_URL=http://localhost:3000
